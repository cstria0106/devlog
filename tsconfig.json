{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "incremental": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "include": ["src"]
}
